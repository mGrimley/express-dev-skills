<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title><%= title %></title>
</head>
<body>
    <h1>Skills<h1>
    <ul>
        <% skills.forEach(function(s) { %>
            <li>
                <a href="/skills/<%= s.id %>">
                    <%= s.skill %>
                </a>
                - Years of experience: 
                <%= s.yearsExp %>
                <form 
                    action="/skills/<%= s.id %>?_method=DELETE"
                    class="delete-form"
                    method="POST"
                >
                    <button type="submit">X</button>
                </form>
            </li>
        <% }); %>
    </ul>

    <h3><a href="/">Home</a></h3>
    <h3><a href="/skills/new">Add Skill</a></h3>
</body>

</html>